{
    "manifest_version": 3,
    "name": "IRCTC Extension",
    "description": "Version 1.0",
    "version": "1.0",
    "action": {
        "default_icon": "test_icon.png",
        "default_title": "Click to open Menu",
        "default_popup": "/popup/popup.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "storage"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.irctc.co.in/*"],
            "js": ["contentScript.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}