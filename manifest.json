{
    "manifest_version": 3,
    "name": "IRCTC Extension",
    "description": "Version 1.0",
    "version": "1.0",
    "action": {
        "default_icon": "hello_extensions.png"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "webRequest",
        "webRequestBlocking"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.irctc.co.in/*"],
            "js": ["content.js"]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}