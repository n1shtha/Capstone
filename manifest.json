{
    "manifest_version": 3,
    "name": "ProtoFlow - UI Interventions for eGov",
    "description": "Version 2.0",
    "version": "2.0",
    "action": {
        "default_icon": "test_icon.png",
        "default_title": "Open ProtoFlow for eGov",
        "default_popup": "popup/popup.html"
    },
    "permissions": [
        "scripting",
        "activeTab",
        "webNavigation",
        "tabs"
    ],
    "host_permissions": [
        "https://www.irctc.co.in/nget/",
        "https://www.bus.irctc.co.in/"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}